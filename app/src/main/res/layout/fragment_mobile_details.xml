                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@+id/first_section"
                    android:text="blalbalbalbalb blablalbalbalbab"
                    android:textColor="#000"
                    android:textSize="13sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/Ram_field"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="15dp"
                    android:background="#aaaaaa" />


                <TextView
                    android:id="@+id/Storage_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Ram_field"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:text="Text Here :"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/Storage_field_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Ram_field"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@+id/first_section"
                    android:text="blalbalbalbalb blablalbalbalbab"
                    android:textColor="#000"
                    android:textSize="13sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/Storage_field"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="15dp"
                    android:background="#aaaaaa" />


                <TextView
                    android:id="@+id/Screen_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Storage_field"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:text="Text Here :"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/Screen_field_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Storage_field"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@+id/first_section"
                    android:text="blalbalbalbalb blablalbalbalbab"
                    android:textColor="#000"
                    android:textSize="13sp" />


                <View
                    android:id="@+id/last_sep"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/Screen_field"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="15dp"
                    android:background="#aaaaaa" />


            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>