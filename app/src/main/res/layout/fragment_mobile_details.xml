                    android:layout_below="@+id/Price_field"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@+id/first_section"
                    android:text="blalbalbalbalb blablalbalbalbab"
                    android:textColor="#000"
                    android:textSize="13sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/Processor_field"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="15dp"
                    android:background="#aaaaaa" />


                <TextView
                    android:id="@+id/Ram_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Processor_field"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:text="Text Here :"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/Ram_field_value"
                    android:layout_width="wrap_content"
