<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mobile_title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="11dp"
            android:gravity="center"
            android:text="Mobile name" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="11dp"
            android:padding="7dp"
            android:src="@drawable/ic_close_3" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pager_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_rel">

        <ru.truba.touchgallery.GalleryWidget.GalleryViewPager
            android:id="@+id/viewer"
            android:layout_width="fill_parent"
            android:layout_height="230dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:overScrollMode="never"
            android:paddingRight="5dp"
            android:paddingTop="5dp" />

        <ImageView
            android:id="@+id/left_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/left_arrow" />


        <ImageView
            android:id="@+id/right_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/right_arrow" />


    </RelativeLayout>

    <View
        android:id="@+id/seperator_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/pager_relative"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="#ff0000" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/seperator_1"
        android:background="#ffffff"
        android:overScrollMode="never"
        android:layout_marginBottom="10dp"
        android:scrollbars="none">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">


            <View
                android:id="@+id/seperator"
                android:layout_width="match_parent"
                android:layout_height="0dp" />


            <RelativeLayout
                android:id="@+id/parentview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/seperator"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_table_drawable"
                >

                <TextView
                    android:id="@+id/first_section"
                    android:layout_width="70dp"
                    android:layout_height="1dp" />


                <View
                    android:layout_width="1dp"
                    android:layout_height="100dp"
                    android:layout_alignTop="@+id/title_field"
                    android:background="#aaaaaa"
                    android:layout_alignBottom="@+id/last_sep"
                    android:layout_toRightOf="@+id/first_section"/>

                <TextView
                    android:id="@+id/title_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Text Here :"
                    android:paddingTop="15dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="13sp" />


                <TextView
                    android:id="@+id/title_field_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:paddingTop="15dp"
                    android:layout_toRightOf="@+id/first_section"
                    android:text="blalbalbalbalb blablalbalbalbab"
                    android:textColor="#000"
                    android:textSize="13sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/title_field"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="15dp"
                    android:background="#aaaaaa" />


                <TextView
                    android:id="@+id/Battery_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_field"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:text="Text Here :"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/Battery_field_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_field"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@+id/first_section"
                    android:text="blalbalbalbalb blablalbalbalbab"
                    android:textColor="#000"
                    android:textSize="13sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/Battery_field"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="15dp"
                    android:background="#aaaaaa" />


                <TextView
                    android:id="@+id/Camera_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Battery_field"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:text="Text Here :"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/Camera_field_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Battery_field"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@+id/first_section"
                    android:text="blalbalbalbalb blablalbalbalbab"
                    android:textColor="#000"
                    android:textSize="13sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/Camera_field"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="15dp"
                    android:background="#aaaaaa" />


                <TextView
                    android:id="@+id/Company_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Camera_field"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:text="Text Here :"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/Company_field_value"
